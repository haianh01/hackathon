{
  "name": "bomberman-bot",
  "version": "1.0.0",
  "description": "Smart Bomberman bot for Zinza Hackathon 2025 - BOOM ZARENA",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:socketio": "node examples/socketio-bot.js",
    "demo:join": "node examples/demo-join-event.js",
    "server": "node dist/server.js",
    "dev": "ts-node src/index.ts",
    "dev:socketio": "npm run build && node examples/socketio-bot.js",
    "dev:server": "nodemon --watch src --ext ts --exec \"npm run build && node dist/server.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "serve": "http-server public -p 8080 -o",
    "full:server": "concurrently \"npm run build:watch\" \"npm run dev:server\"",
    "build:watch": "tsc --watch"
  },
  "keywords": [
    "bomberman",
    "bot",
    "ai",
    "game",
    "hackathon"
  ],
  "author": "Zinza Hackathon Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/socket.io": "^3.0.2",
    "@types/ws": "^8.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.2",
    "ws": "^8.14.0"
  }
}
